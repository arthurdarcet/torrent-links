{
    "name": "Add torrents to rtorrent",
    "description": "Downloads torrents using rTorrent on a remote server.",
    "version": "2.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "js": ["tr_links.user.js"],
        "matches": [
            "http://isohunt.com/*",
            "http://thepiratebay.org/*",
            "http://thepiratebay.se/*",
            "http://thepiratebay.is/*",
            "http://torrentreactor.net/*",
            "http://www.mininova.org/*",
            "http://www.torrentspy.com/*",
            "http://ts.searching.com/*"
        ]
    }],
    "permissions": ["https://torrent.darcet.fr/*"]
}


